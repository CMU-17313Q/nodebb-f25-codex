{
  "id": "nodebb-plugin-summarizer",
  "name": "Topic Summarizer",
  "description": "Adds a Summarize button on topics and shows a quick summary",
  "library": "./library.js",
  "hooks": [
    { "hook": "static:app.load", "method": "init" },
    { "hook": "filter:topic.build", "method": "injectButton" },
    { "hook": "static:api.load", "method": "initApi" }
  ],
  "scripts": [
    "static/lib/summarize.js"
  ],
  "nbbpm": { "compatibility": "^4.1.0" }
}
